{
  "name": "@ferui/ferui",
  "version": "0.0.12",
  "requiredAngularVersion": ">=7.1.0 <8.0.0",
  "author": "iLand cloud",
  "bugs": "https://github.com/ilanddev/ferui/issues",
  "keywords": [
    "angular",
    "javascript",
    "typescript",
    "angular2",
    "UX",
    "UI",
    "web-components"
  ],
  "contributors": [
    {
      "name": "Jonathan Masmejean",
      "email": "jonathan.masmejean@frigg-computing.com"
    }
  ],
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ilanddev/ferui.git"
  },
  "scripts": {
    "clean": "del ./dist",
    "clean:dev": "del ./dist/dev",

    "build:icons:web": "webpack --config webpack.icons.config.js",
    "build:icons:css": "node-sass --source-map=true --precision=6 ./src/ferui-icons/ferui-icons.scss ./dist/ferui-icons/ferui-icons.css",
    "build:icons:optimize": "csso ./dist/ferui-icons/ferui-icons.css ./dist/ferui-icons/ferui-icons.min.css --map file;",
    "build:icons:scss": "cpy '**/*.scss' '../../dist/ferui-icons/' --cwd=src/ferui-icons --parents",
    "build:icons:package": "cpy ./npm/ferui-icons/package.json ./npm/ferui-icons/README.md ./dist/ferui-icons/; replace '@VERSION' $npm_package_version ./dist/ferui-icons/package.json",
    "build:icons": "npm-run-all build:icons:css build:icons:optimize build:icons:scss build:icons:web build:icons:package",

    "build:ui:css": "node-sass --include-path=node_modules --source-map=true --precision=6 --indentedSyntax=true ./src/ferui-design/scss/ferui-design.scss ./dist/ferui-design/css/ferui-design.css",
    "build:ui:prefix": "postcss ./dist/ferui-design/css/ferui-design.css -o ./dist/ferui-design/css/ferui-design.css",
    "build:ui:optimize": "csso ./dist/ferui-design/css/ferui-design.css ./dist/ferui-design/css/ferui-design.min.css --map file",
    "build:ui:scss": "cpy '**/*.scss' '../../dist/ferui-design/' --cwd=src/ferui-design --parents",
    "build:ui:package": "cpy ./npm/ferui-design/package.json ./npm/ferui-design/README.md ./dist/ferui-design/; replace '@VERSION' $npm_package_version ./dist/ferui-design/package.json",
    "build:ui:fonts": "cpy '**/*.*' '../../../dist/ferui-design/font-files' --cwd=src/ferui-design/font-files --parents",
    "build:ui": "npm-run-all build:ui:css build:ui:prefix build:ui:optimize build:ui:scss build:ui:package build:ui:fonts",

    "build:angular:package": "cpy ./npm/ferui-components/package.json ./npm/ferui-components/README.md ./src/ferui-components/; replace '@VERSION' $npm_package_version ./src/ferui-components/package.json",
    "build:angular:ngpackagr": "ng build ferui-components",
    "build:angular": "npm-run-all build:angular:package build:angular:ngpackagr",

    "build": "npm-run-all clean build:ui build:icons build:angular",
    "build:dev": "npm run clean:dev; ng build dev --prod=true --extractCss=true --baseHref=/",
    "build:dev:circleci": "npm run clean:dev; ng build dev --prod=true --extractCss=true --baseHref=/0/ferui/",
    "deploy:gh-pages": "gh-pages -d dist/dev",
    "build:deploy:dev": "npm-run-all build:dev deploy:gh-pages",

    "ng": "ng",
    "start": "npm run pretest:lint; ng serve dev --port 9090",
    "start:prod": "npm run pretest:lint; ng serve dev --port 9090 --prod=true",
    "publish:latest": "npm publish dist/ferui-design --access public; npm publish dist/ferui-icons --access public; npm publish dist/ferui-components --access public",
    "publish:alpha": "npm publish dist/ferui-design --tag alpha --access public; npm publish dist/ferui-icons --tag alpha --access public; npm publish dist/ferui-components --tag alpha --access public",
    "publish:beta": "npm publish dist/ferui-design --tag beta --access public; npm publish dist/ferui-icons --tag beta --access public; npm publish dist/ferui-components --tag beta --access public",
    "publish:rc": "npm publish dist/ferui-design --tag rc --access public; npm publish dist/ferui-icons --tag rc --access public; npm publish dist/ferui-components --tag rc --access public",
    "test:lint": "tslint -p './' -c tslint.json 'src/**/*.ts'",
    "test:components": "ng test ferui-components --watch=false",
    "test:components:watch": "ng test ferui-components --watch",
    "test": "npm-run-all test:lint test:components",
    "format:fix": "pretty-quick --staged",
    "pretest:lint": "tsc -p tests/tslint/tsconfig.json",
    "netlify": "netlify",
    "netlify:publish": "netlify deploy --prod",
    "netlify:deploy": "npm-run-all build:dev netlify:publish"
  },
  "dependencies": {
    "@angular/animations": "^7.1.0",
    "@angular/common": "^7.1.0",
    "@angular/compiler": "^7.1.0",
    "@angular/core": "^7.1.0",
    "@angular/forms": "^7.1.0",
    "@angular/platform-browser": "^7.1.0",
    "@angular/platform-browser-dynamic": "^7.1.0",
    "@angular/router": "^7.1.0",
    "@clr/icons": "^0.13.10",
    "@ng-select/ng-select": "^2.20.5",
    "@tweenjs/tween.js": "17.3.0",
    "@types/tween.js": "17.2.0",
    "@webcomponents/custom-elements": "^1.0.0",
    "core-js": "^2.5.5",
    "rxjs": "6.3.3",
    "web-animations-js": "^2.3.1",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.10.7",
    "@angular-devkit/build-ng-packagr": "^0.10.7",
    "@angular-devkit/build-optimizer": "^0.10.7",
    "@angular-devkit/core": "^7.1.0",
    "@angular/cli": "^7.1.0",
    "@angular/compiler-cli": "^7.1.0",
    "@angular/language-service": "^7.1.0",
    "@types/highlight.js": "^9.12.3",
    "@types/jasmine": "^3.3.1",
    "@types/jasmine-expect": "^3.8.1",
    "@types/jasmine-matchers": "^0.2.32",
    "@types/jasminewd2": "^2.0.6",
    "@types/js-beautify": "^1.8.0",
    "@types/node": "~8.9.4",
    "angular-in-memory-web-api": "^0.8.0",
    "autoprefixer": "^9.5.0",
    "awesome-typescript-loader": "^5.2.1",
    "cheerio": "^1.0.0-rc.2",
    "codelyzer": "^4.5.0",
    "cpy-cli": "^1.0.1",
    "csso-cli": "^1.1.0",
    "del-cli": "^1.1.0",
    "detect-browser": "^2.5.1",
    "gh-pages": "^2.0.1",
    "highlight.js": "^9.15.6",
    "html-reporter": "^3.0.2",
    "husky": "^1.2.0",
    "jasmine-core": "^3.3.0",
    "jasmine-expect": "^3.8.4",
    "jasmine-spec-reporter": "^4.2.1",
    "js-beautify": "^1.10.0",
    "karma": "^3.1.3",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "^2.0.4",
    "karma-htmlfile-reporter": "^0.3.7",
    "karma-jasmine": "^2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "karma-jasmine-matchers": "^3.8.3",
    "karma-mocha-reporter": "^2.2.5",
    "karma-notify-reporter": "^1.0.1",
    "karma-scss-preprocessor": "^3.0.0",
    "lite-server": "^2.4.0",
    "ng-dynamic": "^3.0.2",
    "ng-dynamic-component": "^4.0.0",
    "ng-packagr": "^4.4.5",
    "ngx-highlightjs": "^3.0.3",
    "node-sass": "^4.9.3",
    "node-sass-tilde-importer": "^1.0.2",
    "npm-run-all": "^4.1.2",
    "postcss-cli": "^5.0.0",
    "prettier": "1.18.1",
    "pretty-quick": "^1.11.1",
    "replace": "^1.0.0",
    "shelljs": "^0.8.1",
    "source-map": "^0.7.2",
    "ts-api-guardian": "^0.4.1",
    "ts-node": "~5.0.1",
    "tsickle": "^0.33.0",
    "tslib": "^1.7.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.12.0",
    "tslint-defocus": "^2.0.5",
    "typescript": ">=3.1.3 <3.2.0",
    "uglifyjs": "^2.4.11",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "webpack-cli": "^2.0.15"
  },
  "engines": {
    "node": ">=10.9.0 <11.0.0",
    "npm": ">=5.0.0 <6.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format:fix"
    }
  }
}
